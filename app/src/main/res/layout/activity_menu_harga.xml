<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.MenuHargaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="12pt"
            android:textColor="@color/textWhite"
            android:id="@+id/title"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@drawable/logojatim"
            android:id="@+id/logoImage"/>

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="@string/app_desc"
            android:textSize="6pt"
            android:textAlignment="center"
            android:textColor="@color/textWhite"
            android:id="@+id/desc"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Pasar"
            android:textSize="5pt"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/consumePriceBtn"
            android:onClick="btnPasarClicked"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Grosir"
            android:textSize="5pt"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="btnGrosirClicked"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Produsen"
            android:textSize="5pt"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="btnProdusenClicked"/>

    </LinearLayout>



</RelativeLayout>